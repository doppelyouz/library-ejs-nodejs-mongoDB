<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Visitors</title>
</head>
<body>
    <head>
        <h1 class="skyblue">Library</h1>
        <div class="navbar">
            <div class="navbar-in">
                <div class="navbar-item"><a href="/books">Books</a></div>
                <div class="navbar-item active"><a href="/visitors">Visitors</a></div>
                <div class="navbar-item"><a href="/cards">Cards</a></div>
                <div class="navbar-item"><a href="/statistics">Statistics</a></div>
            </div>  
        </div>
    </head>
    <main>
        <div class="container">
            <h3 class="skyblue">All visitors:</h3>
            <button type="button" class="new" data-bs-toggle="modal" data-bs-target="#createVisitorModal" id="newVisitor" >New visitor</button>
        </div>
        <div class="modal fade" id="createVisitorModal">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title">Cоздание визитора</h4>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="inputsCreateVisitors">
                        <div class="modal-input">
                            <label for="name">Name: </label>
                            <input type="text" id="name" name="name">
                        </div>
                        <div class="modal-input">
                            <label for="phone">Phone: </label>
                            <input type="text" id="phone" name="phone">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="createVisitor">Создать</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="closeVisitor">Закрыть</button>
                </div>
              </div>
            </div>
          </div>
          <div class="modal fade" id="changeVisitorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Изменить визитора</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="inputsChangeVisitors">
                        <div class="modal-input">
                            <label for="nameChange">Name: </label>
                            <input type="text" id="nameChange" name="nameChange">
                        </div>
                        <div class="modal-input">
                            <label for="phoneChange">Phone: </label>
                            <input type="text" id="phoneChange" name="phoneChange">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="closeChangesVisitor">Close</button>
                  <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="saveChangesVisitor">Save changes</button>
                </div>
              </div>
            </div>
          </div>
        <div class="container">
            <div class="sort">
                <span class="text">Sort by:</span>
                <select class="clickers">
                    <option value="id" selected>ID</option>
                    <option value="name">Name</option>
                </select>
                <button class="clickers" id="visitorSortBy">Sort</button>
            </div>
            <div class="search">
                <span class="text">Search:</span>
                <input type="text" class="clickers" id="searchInput">
                <button class="clickers" id="visitorSearchBy">Search</button>
            </div>
        </div>
        <div class="container">
            <table id="tableVisitor">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Edit</th>
                        </tr> 
                    </thead>
                    <tbody id="tbodyVisitors">
                        <% for(let visitor of visitors) { %> 
                            <tr data-id="<%= visitor._id %>">
                              <th><%= visitor._id %></th>
                              <th><%= visitor.name %></th>
                              <th><%= visitor.phone %></th>
                              <th><img src="/images/edit.png" data-bs-toggle="modal" data-bs-target="#changeVisitorModal"></th>
                            </tr>
                          <% } %> 
                    </tbody>
                </table>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
        <script src="/scripts/visitors.js"></script></main>
    </body> 
</html>